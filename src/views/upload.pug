extends base

block content
    div.upload__container
        div.upload__video
            video#preview
            button#actionBtn.social__btn Start Recording
        if errorMessage
            span=errorMessage
        form(method="POST", enctype="multipart/form-data").forms
            label(for="video") Video File
            input(type="file", accept="video/*", required, id="video", name="video")
            label(for="thumbnail") Thumbnail File
            input(type="file", accept="image/*", required, id="thumbnail", name="thumbnail")
            input(name="title", placeholder="Title", required, type="text")
            input(name="description", placeholder="Description", required, type="text")
            input(name="hashtags", placeholder="Hashtags, seperated by comma.", required, type="text")
            input(value="Upload Video", type="submit")

block scripts
    script(src="/static/js/recorder.js")