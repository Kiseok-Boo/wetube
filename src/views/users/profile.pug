extends ../base
include ../mixins/video

block content
    div.profile__data
        if user.avatarURL
            img(src="/" + user.avatarURL).avatar
        else
            div.avatar.base
                i.fas.fa-user
        h3=user.username
    div.video-grid
        each video in user.videos
            +video(video)
        else
            span.empty__message No videos found